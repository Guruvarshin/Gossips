<div class="row">
    <div class="col s12 m8">
        <h3>{{gossip.title}}
            <small>{{{editIcon gossip.user user gossip._id false}}}</small>
        </h3>
        <div class="card gossip">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{gossip.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{gossip.user.displayName}}</span>
                <img src="{{gossip.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/gossips/user/{{gossip.user._id}}">More From {{gossip.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<div class="center align">
    <a href="/dashboard" class="btn orange">Go to Dashboard</a>
    </div>